---
import { Image } from 'astro:assets';
import logo from '../assets/logo.jpg';
---
<header>
  <a href="/" class="logo-link">
    <Image src={logo} alt="La Diabla Borracha" height={44} class="logo" />
  </a>
  <button id="search-toggle" class="search-btn" aria-label="Buscar" aria-expanded="false">
    <svg id="icon-search" xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <circle cx="11" cy="11" r="8"/>
      <line x1="21" y1="21" x2="16.65" y2="16.65"/>
    </svg>
    <svg id="icon-close" xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display:none">
      <line x1="18" y1="6" x2="6" y2="18"/>
      <line x1="6" y1="6" x2="18" y2="18"/>
    </svg>
  </button>
</header>

<style>
  header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 1rem;
    height: 56px;
    background: linear-gradient(170deg, #111111 0%, #08081e 100%);
    border-bottom: 1px solid var(--color-border);
  }

  .logo-link {
    display: flex;
    align-items: center;
  }

  .logo {
    height: 44px;
    width: auto;
    object-fit: contain;
  }

  .search-btn {
    background: none;
    border: none;
    cursor: pointer;
    color: var(--color-white);
    display: flex;
    align-items: center;
    padding: 4px;
  }
</style>
