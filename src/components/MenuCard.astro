---
interface Props {
  item: {
    name: string;
    description: string;
    price: number;
    category: string;
    image: string;
  };
  slug: string;
}
const { item, slug } = Astro.props;

const categoryEmojis: Record<string, string> = {
  'Hamburguesas': 'ğŸ”',
  'Salchipapas': 'ğŸŸ',
  'Parrillas': 'ğŸ”¥',
  'Cocteles': 'ğŸ¹',
  'Margaritas': 'ğŸ¹',
  'Pisco Sour': 'ğŸ¥ƒ',
  'Barra de Destilados': 'ğŸ¥ƒ',
  'Mojitos': 'ğŸƒ',
  'Cervezas': 'ğŸº',
  'Botellas': 'ğŸ·',
};

const emoji = categoryEmojis[item.category] ?? 'ğŸ½ï¸';
---
<a href={`/plato/${slug}`} class="card" data-category={item.category}>
  <div class="img-wrap" transition:name={`hero-${slug}`}>
    {item.image ? (
      <Fragment>
        <img
          src={item.image}
          alt={item.name}
          loading="lazy"
          class="card-img"
          onerror="this.style.display='none';this.nextElementSibling.style.display='flex'"
        />
        <div class="img-error">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="#484848" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <line x1="7" y1="2" x2="7" y2="8"/><line x1="5" y1="2" x2="5" y2="6"/><line x1="9" y1="2" x2="9" y2="6"/>
            <path d="M5 6 Q7 9 9 6"/><line x1="7" y1="8" x2="7" y2="22"/>
            <line x1="17" y1="2" x2="17" y2="22"/><path d="M14 2 Q14 9 17 9"/>
          </svg>
        </div>
      </Fragment>
    ) : (
      <div class="img-placeholder">{emoji}</div>
    )}
  </div>
  <div class="info">
    <p class="name">{item.name}</p>
    {item.description && <p class="desc">{item.description}</p>}
    <p class="price">S/ {item.price}</p>
  </div>
</a>

<style>
  .card {
    display: flex;
    align-items: center;
    gap: 0.875rem;
    background: rgba(30, 30, 30, 0.65);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-radius: 12px;
    overflow: hidden;
    padding: 0.75rem;
    box-shadow: 0 2px 8px rgba(0,0,0,0.4);
    transition: transform 0.15s;
  }

  .card:active {
    transform: scale(0.98);
  }

  .img-wrap {
    flex-shrink: 0;
    width: 100px;
    height: 100px;
    border-radius: 8px;
    overflow: hidden;
  }

  .card-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .img-placeholder,
  .img-error {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #2a2a2a, #1a1a1a);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .img-placeholder {
    font-size: 2.25rem;
  }

  .img-error {
    display: none;
  }

  .info {
    flex: 1;
    min-width: 0;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .name {
    font-family: var(--font-title);
    font-size: 0.95rem;
    color: var(--color-white);
    line-height: 1.3;
  }

  .desc {
    font-size: 0.8rem;
    color: var(--color-gray);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    line-height: 1.4;
  }

  .price {
    font-size: 1rem;
    font-weight: 700;
    color: var(--color-yellow);
    margin-top: 0.25rem;
  }
</style>
