---
interface Props {
  item: {
    name: string;
    description: string;
    price: number;
    category: string;
    image: string;
  };
  slug: string;
}
const { item, slug } = Astro.props;

const categoryEmojis: Record<string, string> = {
  'Hamburguesas': 'ğŸ”',
  'Salchipapas': 'ğŸŸ',
  'Parrillas': 'ğŸ”¥',
  'Cocteles': 'ğŸ¹',
  'Margaritas': 'ğŸ¹',
  'Pisco Sour': 'ğŸ¥ƒ',
  'Barra de Destilados': 'ğŸ¥ƒ',
  'Mojitos': 'ğŸƒ',
