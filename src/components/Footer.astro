---
interface Props {
  name: string;
  phone: string;
  locations: string[];
  social_media: {
    instagram: string;
    facebook: string;
  };
}
const { name, phone, locations, social_media } = Astro.props;

const phoneClean = phone.replace(/\s/g, '');
const igHandle = social_media.instagram.replace('@', '');
const fbHandle = social_media.facebook.replace('@', '');
---

<footer>
  <div class="footer-inner">

    <p class="brand">{name}</p>

    <div class="section">
      <p class="section-title">
        <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M20 10c0 6-8 12-8 12S4 16 4 10a8 8 0 0 1 16 0z"/><circle cx="12" cy="10" r="3"/>
        </svg>
        Ubicaciones
      </p>
      {locations.map(loc => (
        <a
          href={`https://maps.google.com/?q=${encodeURIComponent(loc)}`}
          target="_blank"
          rel="noopener noreferrer"
          class="location-link"
        >
          {loc}
        </a>
      ))}
    </div>

    <div class="section">
      <p class="section-title">
        <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07A19.5 19.5 0 0 1 4.69 13a19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 3.6 2h3a2 2 0 0 1 2 1.72c.127.96.361 1.903.7 2.81a2 2 0 0 1-.45 2.11L7.91 9.91a16 16 0 0 0 6.29 6.29l.91-.91a2 2 0 0 1 2.11-.45c.907.339 1.85.573 2.81.7A2 2 0 0 1 22 17.92z"/>
        </svg>
        Teléfono
      </p>
      <a href={`https://wa.me/51${phoneClean}`} target="_blank" rel="noopener noreferrer" class="contact-link">
        {phone}
      </a>
    </div>

    <div class="section">
      <p class="section-title">
        <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
        </svg>
        Redes sociales
      </p>
      <div class="socials">
        <a
          href={`https://instagram.com/${igHandle}`}
          target="_blank"
          rel="noopener noreferrer"
          class="social-pill ig"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>
          </svg>
          {social_media.instagram}
        </a>
        <a
          href={`https://facebook.com/${fbHandle}`}
          target="_blank"
          rel="noopener noreferrer"
          class="social-pill fb"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
          </svg>
          {social_media.facebook}
        </a>
      </div>
    </div>

    <p class="copy">© {new Date().getFullYear()} {name}</p>
  </div>
</footer>

<style>
  footer {
    background: linear-gradient(170deg, #111111 0%, #08081e 100%);
    border-top: 1px solid var(--color-border);
    padding: 2rem 1rem 2.5rem;
    margin-top: 1rem;
  }

  .footer-inner {
    max-width: 480px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .brand {
    font-family: var(--font-title);
    font-size: 1.1rem;
    color: var(--color-yellow);
    line-height: 1.2;
  }

  .section {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .section-title {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    font-size: 0.7rem;
    font-weight: 600;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--color-gray);
  }

  .location-link {
    font-size: 0.88rem;
    color: var(--color-white);
    line-height: 1.5;
    padding: 0.4rem 0;
    border-bottom: 1px solid var(--color-border);
    display: block;
  }

  .location-link:last-child {
    border-bottom: none;
  }

  .location-link:hover {
    color: var(--color-yellow);
  }

  .contact-link {
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--color-white);
  }

  .contact-link:hover {
    color: var(--color-yellow);
  }

  .socials {
    display: flex;
    gap: 0.6rem;
    flex-wrap: wrap;
  }

  .social-pill {
    display: flex;
    align-items: center;
    gap: 0.35rem;
    padding: 0.4rem 0.8rem;
    border-radius: 999px;
    font-size: 0.82rem;
    font-weight: 600;
    border: 1.5px solid transparent;
    transition: opacity 0.15s;
  }

  .social-pill:active {
    opacity: 0.75;
  }

  .ig {
    border-color: #7A6464;
    color: #7A6464;
  }

  .fb {
    border-color: #556070;
    color: #556070;
  }

  .copy {
    font-size: 0.75rem;
    color: var(--color-gray);
    padding-top: 0.5rem;
    border-top: 1px solid var(--color-border);
  }
</style>
