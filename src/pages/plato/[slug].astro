---
import Layout from '../../layouts/Layout.astro';
import { slugify } from '../../lib/utils.js';
import data from '../../db/la_diabla_info.json';

export function getStaticPaths() {
  return data.restaurant.menu_items.map(item => ({
    params: { slug: slugify(item.name) },
    props: { item },
  }));
}

interface Props {
  item: {
    name: string;
    description: string;
    price: number;
    category: string;
    image: string;
  };
}

const { item } = Astro.props;
const { slug } = Astro.params;

const categoryEmojis: Record<string, string> = {
  'Hamburguesas': 'üçî',
  'Salchipapas': 'üçü',
  'Parrillas': 'üî•',
  'Cocteles': 'üçπ',
  'Margaritas': 'üçπ',
  'Pisco Sour': 'ü•É',
  'Barra de Destilados': 'ü•É',
  'Mojitos': 'üçÉ',
  'Cervezas': 'üç∫',
  'Botellas': 'üç∑',
};

const emoji = categoryEmojis[item.category] ?? 'üçΩÔ∏è';
const waText = encodeURIComponent(`Hola! Quiero pedir: ${item.name}`);
const waUrl = `https://wa.me/51926875390?text=${waText}`;
---

<Layout title={`${item.name} ‚Äî La Diabla Borracha`}>
  <div class="page">
    <div class="hero">
      <a href="/" class="back-btn" aria-label="Volver al men√∫">
        <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="15 18 9 12 15 6"/>
        </svg>
      </a>
      {item.image
        ? <img src={item.image} alt={item.name} class="hero-img" transition:name={`hero-${slug}`} />
        : (
          <div class="hero-placeholder" transition:name={`hero-${slug}`}>
            <span class="hero-emoji">{emoji}</span>
          </div>
        )
      }
    </div>

    <div class="content">
      <span class="badge">{item.category}</span>
      <h1 class="name">{item.name}</h1>
      {item.description && <p class="description">{item.description}</p>}
      <p class="price">S/ {item.price}</p>

      <a href={waUrl} target="_blank" rel="noopener noreferrer" class="order-btn">
        <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="currentColor">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
        </svg>
        Pedir por WhatsApp
      </a>
    </div>
  </div>
</Layout>

<style>
  .page {
    min-height: 100dvh;
    display: flex;
    flex-direction: column;
  }

  .hero {
    position: relative;
    width: 100%;
    height: 280px;
    flex-shrink: 0;
  }

  .hero-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #2a2a2a, #111);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-emoji {
    font-size: 5rem;
  }

  .back-btn {
    position: absolute;
    top: 1rem;
    left: 1rem;
    z-index: 10;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: rgba(18,18,18,0.75);
    backdrop-filter: blur(6px);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-white);
  }

  .content {
    flex: 1;
    padding: 1.25rem 1rem 2.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    border-radius: 999px;
    background: rgba(255,215,0,0.15);
    color: var(--color-yellow);
    font-size: 0.8rem;
    font-weight: 600;
    width: fit-content;
  }

  .name {
    font-family: var(--font-title);
    font-size: 1.6rem;
    color: var(--color-white);
    line-height: 1.2;
  }

  .description {
    font-size: 0.95rem;
    color: var(--color-gray);
    line-height: 1.6;
  }

  .price {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-yellow);
    font-family: var(--font-title);
  }

  .order-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.6rem;
    background: #25D366;
    color: #fff;
    padding: 0.9rem 1.5rem;
    border-radius: 12px;
    font-family: var(--font-body);
    font-weight: 600;
    font-size: 1rem;
    box-shadow: 0 4px 16px rgba(37,211,102,0.35);
    margin-top: auto;
    transition: opacity 0.15s;
  }

  .order-btn:active {
    opacity: 0.85;
  }
</style>
