---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import CategoryFilter from '../components/CategoryFilter.astro';
import MenuCard from '../components/MenuCard.astro';
import Footer from '../components/Footer.astro';
import { slugify } from '../lib/utils.js';
import data from '../db/la_diabla_info.json';

const { name, phone, locations, social_media, menu_categories, menu_items } = data.restaurant;
---

<Layout title={`${name} ‚Äî Men√∫ Digital`}>
  <Header />

  <main>
    <div class="filter-sticky">
      <div class="search-bar" id="search-bar" hidden>
        <input
          type="search"
          id="search-input"
          placeholder="Buscar en el men√∫..."
          autocomplete="off"
        />
      </div>
      <CategoryFilter categories={menu_categories} />
    </div>

    <section class="grid" id="menu-grid">
      {menu_items.map(item => (
        <MenuCard item={item} slug={slugify(item.name)} />
      ))}
    </section>

    <p class="empty-state" id="empty-state" hidden>No se encontraron productos üîç</p>

    <Footer {name} {phone} {locations} {social_media} />
  </main>

  <a
    class="whatsapp-btn"
    href="https://wa.me/51926875390"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="Pedir por WhatsApp"
  >
    <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" viewBox="0 0 24 24" fill="currentColor">
      <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
    </svg>
    <span>Pedir ahora</span>
  </a>
</Layout>

<style>
  main {
    padding-top: 56px;
    padding-bottom: 0;
  }

  .filter-sticky {
    position: sticky;
    top: 56px;
    z-index: 90;
    background: var(--color-bg);
    border-bottom: 1px solid var(--color-border);
  }

  .search-bar {
    padding: 0.6rem 1rem;
    border-bottom: 1px solid var(--color-border);
  }

  .search-bar input {
    width: 100%;
    background: #2a2a2a;
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: 0.55rem 0.875rem;
    color: var(--color-white);
    font-family: var(--font-body);
    font-size: 0.95rem;
    outline: none;
  }

  .search-bar input:focus {
    border-color: var(--color-red);
  }

  .search-bar input::placeholder {
    color: var(--color-gray);
  }

  /* ocultar el bot√≥n nativo √ó del input search en Chrome */
  .search-bar input::-webkit-search-cancel-button {
    display: none;
  }

  .grid {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    padding: 1rem;
  }

  .empty-state {
    text-align: center;
    padding: 3rem 1rem;
    color: var(--color-gray);
    font-size: 1rem;
  }

  .whatsapp-btn {
    position: fixed;
    bottom: 1.25rem;
    right: 1.25rem;
    z-index: 200;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: #25D366;
    color: #fff;
    padding: 0.7rem 1.1rem;
    border-radius: 999px;
    font-family: var(--font-body);
    font-weight: 600;
    font-size: 0.9rem;
    box-shadow: 0 4px 16px rgba(37,211,102,0.4);
    transition: transform 0.15s;
  }

  .whatsapp-btn:active {
    transform: scale(0.96);
  }
</style>

<script>
  // Tomamos el control del scroll ‚Äî desactivamos la restauraci√≥n autom√°tica del browser
  history.scrollRestoration = 'manual';

  const toggleBtn   = document.getElementById('search-toggle') as HTMLButtonElement;
  const searchBar   = document.getElementById('search-bar')    as HTMLDivElement;
  const searchInput = document.getElementById('search-input')  as HTMLInputElement;
  const iconSearch  = document.getElementById('icon-search')   as SVGElement;
  const iconClose   = document.getElementById('icon-close')    as SVGElement;
  const emptyState  = document.getElementById('empty-state')   as HTMLParagraphElement;

  const pills = document.querySelectorAll<HTMLButtonElement>('.pill');
  const cards = document.querySelectorAll<HTMLElement>('.card');

  let activeCategory = 'todos';
  let searchText = '';

  function applyFilters() {
    let visible = 0;
    cards.forEach(card => {
      const matchCat  = activeCategory === 'todos' || card.dataset.category === activeCategory;
      const cardName  = card.querySelector('.name')?.textContent?.toLowerCase() ?? '';
      const matchText = cardName.includes(searchText);
      const show = matchCat && matchText;
      card.style.display = show ? '' : 'none';
      if (show) visible++;
    });
    emptyState.hidden = visible > 0;
  }

  // Filtro por categor√≠a
  pills.forEach(pill => {
    pill.addEventListener('click', () => {
      activeCategory = pill.dataset.category ?? 'todos';
      pills.forEach(p => p.classList.remove('active'));
      pill.classList.add('active');
      applyFilters();
    });
  });

  // Toggle barra de b√∫squeda
  toggleBtn?.addEventListener('click', () => {
    const isOpen = !searchBar.hidden;
    if (isOpen) {
      searchBar.hidden = true;
      iconSearch.style.display = '';
      iconClose.style.display  = 'none';
      toggleBtn.setAttribute('aria-expanded', 'false');
      searchInput.value = '';
      searchText = '';
      applyFilters();
    } else {
      searchBar.hidden = false;
      iconSearch.style.display = 'none';
      iconClose.style.display  = '';
      toggleBtn.setAttribute('aria-expanded', 'true');
      searchInput.focus();
    }
  });

  // Filtro por texto
  searchInput?.addEventListener('input', () => {
    searchText = searchInput.value.toLowerCase().trim();
    applyFilters();
  });

  // Cerrar b√∫squeda con Escape
  searchInput?.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') toggleBtn.click();
  });

  // --- Scroll restoration ---

  // Al hacer click en una card, guardamos el scroll antes de navegar
  cards.forEach(card => {
    card.addEventListener('click', () => {
      sessionStorage.setItem('menuScrollY', String(window.scrollY));
    });
  });

  // Al volver (back), restauramos el scroll guardado
  const savedY = sessionStorage.getItem('menuScrollY');
  if (savedY !== null) {
    sessionStorage.removeItem('menuScrollY');
    requestAnimationFrame(() => {
      window.scrollTo({ top: Number(savedY), behavior: 'instant' });
    });
  }
</script>
